{
  "name": "@wfcd/hub",
  "version": "2.4.3",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "eslint --ignore-path .gitignore . --fix",
    "prepare": "husky install",
    "test": "cypress run --config-file=cypress.config.js"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint --cache",
    "*.**": "prettier --check --ignore-unknown"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.8.2",
    "@nuxtjs/device": "^2.3.0",
    "@nuxtjs/i18n": "^7.3.1",
    "@nuxtjs/pwa": "^3.3.5",
    "@nuxtjs/sentry": "^6.0.3",
    "bootstrap-vue": "^2.23.1",
    "core-js": "^3.33.1",
    "dayjs": "^1.11.10",
    "leaflet": "1.3.1",
    "node-fetch": "^2.7.0",
    "nuxt": "^2.17.2",
    "vue": "^2.7.15",
    "vue-binpacker-plugin": "^1.1.0",
    "vue-ellipse-progress": "^1.3.1",
    "vue-i18n": "^8.28.2",
    "vue-matomo": "^4.2.0",
    "vue-multiselect": "^2.1.8",
    "vue-native-notification": "^1.1.1",
    "vue-notification": "^1.3.20",
    "vue-server-renderer": "^2.7.15",
    "vue-template-compiler": "^2.7.15",
    "vue2-leaflet": "^1.2.3",
    "vuex": "^3.6.2",
    "vuex-persistedstate": "^4.1.0",
    "webpack": "^4.47.0"
  },
  "overrides": {
    "postcss-preset-env": "^7.x"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.22.15",
    "@babel/runtime-corejs3": "^7.23.2",
    "@cypress/vue": "^2.2.4",
    "@cypress/webpack-dev-server": "^3.6.1",
    "@nuxt/babel-preset-app": "^2.17.2",
    "@nuxt/postcss8": "^1.1.3",
    "@nuxt/types": "^2.17.2",
    "@nuxtjs/eslint-config": "^12.0.0",
    "@nuxtjs/eslint-module": "^4.1.0",
    "cypress": "^13.4.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-nuxt": "^4.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vuejs-accessibility": "^2.2.0",
    "html-webpack-plugin": "4.5.2",
    "husky": "^8.0.3",
    "less": "^4.2.0",
    "less-loader": "^7.3.0",
    "lint-staged": "^15.0.2",
    "postcss": "^8.4.31",
    "prettier": "^2.8.8",
    "webpack-dev-server": "^4.15.1"
  },
  "prettier": {
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 120,
    "semi": true
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "parser": "@babel/eslint-parser",
      "requireConfigFile": false,
      "babelOptions": {
        "presets": [
          "@nuxt/babel-preset-app"
        ]
      }
    },
    "extends": [
      "@nuxtjs",
      "plugin:nuxt/recommended",
      "plugin:prettier/recommended",
      "plugin:vuejs-accessibility/recommended"
    ],
    "plugins": [
      "vuejs-accessibility"
    ],
    "rules": {
      "vue/no-use-v-if-with-v-for": "off",
      "semi": [
        "error",
        "always"
      ],
      "arrow-parens": [
        "error",
        "always"
      ],
      "quotes": [
        2,
        "single",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ]
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      [
        "@semantic-release/exec",
        {
          "successCmd": "echo 'release=yes' >> $GITHUB_OUTPUT; echo $GITHUB_OUTPUT",
          "failCmd": "echo 'release=no' >> $GITHUB_OUTPUT; echo $GITHUB_OUTPUT"
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ]
        }
      ],
      "@eclass/semantic-release-sentry-releases"
    ],
    "branches": [
      "dev"
    ]
  },
  "engines": {
    "node": "18"
  }
}
