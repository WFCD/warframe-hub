<link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.0.3/cookieconsent.min.css" />
<script src="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.0.3/cookieconsent.min.js"></script>

<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<link rel="stylesheet" href="/css/main.css?v={{lookup sums 'css/main.css'}}" media="screen" id="mode">
<link rel="stylesheet" href="/css/main.css?v={{lookup sums 'css/main.css'}}" id="mode-custom">
<link rel="stylesheet" href="/css/scrollbar.css?v={{lookup sums 'css/scrollbar.css'}}">

<script>
  /* global $, Cookies */
  // Wait until page is ready to display
  document.getElementsByTagName("html")[0].style.visibility = "hidden";
  $(document).ready(function() {
    document.getElementsByTagName("html")[0].style.visibility = "visible";
  });

  // Theme loading
  const theme = $('#mode');
  if (typeof Cookies.get('mode') === 'undefined') {
    Cookies.set('mode', 'orokin', {expires: 365 });
  }
  const themecustom = $('#mode-custom');
  switch (Cookies.get('mode')) {
    case 'grineer':
      theme.attr('href', "/css/main.css?v={{lookup sums 'css/main.css'}}");
      themecustom.attr('href', "/css/theme.grineer.css?v={{lookup sums 'css/theme.grineer.css'}}");
      theme.toggleClass('grineer');
      break;
    default:
      theme.attr('href', "/css/main.css?v={{lookup sums 'css/main.css'}}");
      themecustom.attr('href', "/css/theme.orokin.css?v={{lookup sums 'css/theme.orokin.css'}}");
      break;
  }
  const sums = JSON.parse("{{json sums}}".replace(/&quot;/ig, '"'));

  // Cookie Consent setup
  window.addEventListener("load", () => {
    window.cookieconsent.initialise({
      "palette": {
        "popup": {
          "background": "#000"
        },
        "button": {
          "background": "#f1d600"
        }
      },
      "theme": "classic",
      "position": "bottom-right"
    })
  });
</script>
