<script>
    $(function(){
        $('#nightmode').click(function(){
            var theme = $('#mode');
            var themecustom = $('#mode-custom');
            if(theme.hasClass('night')){
                theme.attr('href', 'css/bootstrap-default.min.css');
                themecustom.attr('href', 'css/main.css');
                theme.toggleClass('night');
                Cookies.set('mode', 'day');
            }
            else{
                theme.attr('href', 'css/bootstrap-night.min.css');
                themecustom.attr('href', 'css/main.night.css');
                theme.toggleClass('night');
                Cookies.set('mode', 'night');
            }
        });
    });
</script>