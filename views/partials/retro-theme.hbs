<script>
	$(function() {
		$('#retro').click(function() {
			var theme = $('#mode');
			var themecustom = $('#mode-custom');
			if (theme.hasClass('retro')) {
				theme.attr('href', 'css/bootstrap-default.min.css');
				themecustom.attr('href', 'css/main.css');
				theme.removeClass();
				Cookies.set('mode', 'day');
			} else {
				theme.attr('href', 'css/bootstrap-default.min.css');
				themecustom.attr('href', 'css/main.retro.css');
				theme.removeClass();
				theme.addClass('retro');
				Cookies.set('mode', 'retro');
			}
		});
	});
</script>
