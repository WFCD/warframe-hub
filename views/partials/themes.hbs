<script>
	/* globals $, updateGrid, Cookies, sums */
	$(function() {
		$('#orokin').click(function() {
			setTheme(undefined, undefined, true);
		});
	});
	$(function() {
		$('#grineer').click(function() {
			setTheme('grineer', 'default', false);
		});
	});

  const setTheme = (themeName, superTheme, reset) => {

    const theme = $('#mode');
    if (!reset) {
      if (theme.hasClass(themeName)) {
        setTheme(false, true);
      } else {
        theme.attr('href', `css/main.css?v=${sums[`css/main.css`]}`);
        themecustom.attr('href', `css/theme.${themeName}.css?v=${sums[`css/theme.${themeName}.css`]}`);
        theme.removeClass();
        theme.addClass(themeName);
        Cookies.set('mode', themeName, {expires: 365});
      }
    } else {
      theme.attr('href', `css/main.css?v=${sums[`css/main.css`]}`);
      themecustom.attr('href', `css/theme.orokin.css?v=${sums['css/theme.orokin.css']}`);
      theme.removeClass();
      Cookies.set('mode', 'day', {expires: 365});
    }
  };
</script>
